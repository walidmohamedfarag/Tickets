@model IEnumerable<Movie>
<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">All Movies</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a href="/Admin/Movie/Create" class="btn btn-success">Add Movie</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">

            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Type</th>
                        <th scope="col">Price</th>
                        <th scope="col">Date</th>
                        <th scope="col">Time</th>
                        <th scope="col">Cinema</th>
                        <th scope="col">Main Image</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td class="name-cell">@item.Name</td>
                            <td>@item.Type</td>
                            <td>@item.Price</td>
                            <td>@item.Date_Time.ToString("yyyy-MM-dd")</td>
                            <td>@(item.Date_Time.TimeOfDay - new TimeSpan(12,0,0))</td>
                            <td>@(item.CinemaId == item.Cinema.Id ? item.Cinema.Name : "")</td>
                            <td>
                                <img src="~/MovieImg/@item.MainImg" width="65" height="65" style="cursor:pointer" onclick="openImageModal(this)">
                            </td>
                            @if (item.Date_Time.ToString("yyyy-MM-dd") == DateTime.Now.ToString("yyyy-MM-dd"))
                            {
                                <td><span class="badge text-bg-success">Active</span></td>
                            }
                            else
                            {
                                <td><span class="badge text-bg-danger">InActive</span></td>
                            }
                            <td>
                                <a href="/Admin/Movie/Edit?id=@item.Id" type="button" class="btn btn-warning">Edit</a>
                                <a href="/Admin/Movie/Delete?id=@item.Id" class="btn btn-danger btn-delete">Delete</a>

                            </td>
                        </tr>
                    }
                    <!-- نافذة العرض -->
                    <div id="imgModal" style="display:none; position:fixed; z-index:9999; left:0; top:0; width:100%; height:100%; background:rgba(0,0,0,0.7); text-align:center;">
                        <img id="modalImg" style="margin-top:5%; max-width:80%; max-height:80%; border-radius:8px;">
                    </div>

                    <script>
                        function openImageModal(img) {
                            var modal = document.getElementById("imgModal");
                            var modalImg = document.getElementById("modalImg");
                            modalImg.src = img.src;
                            modal.style.display = "block";
                            modal.onclick = function () {
                                modal.style.display = "none";
                            }
                        }
                    </script>

                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial">
}

    <script>

        document.addEventListener("DOMContentLoaded", function () {
            const deleteButtons = document.querySelectorAll(".btn-delete");

            deleteButtons.forEach(button => {
                button.addEventListener("click", function (e) {
                    e.preventDefault(); // stop normal navigation

                    const url = this.getAttribute("href");

                    Swal.fire({
                        title: "Are you sure?",
                        text: "This action cannot be undone!",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#d33",
                        cancelButtonColor: "#3085d6",
                        confirmButtonText: "Yes, delete it!"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            Swal.fire({
                              title: "Deleted!",
                              text: "Your file has been deleted.",
                              icon: "success"
                            });

                            // Redirect to delete URL
                            window.location.href = url;
                        }
                    });
                });
            });
        });

    </script>
